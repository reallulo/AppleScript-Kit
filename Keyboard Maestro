tell application "Keyboard Maestro"
	-- get the Selected Macro Name (Single Selection)
	set theMacroName to name of (macro id (item 1 of (selectedMacros)))

	-- get the Selected Macros Name List (Multiple Selection)
	set theMacroNames to {}

	---- get the Macro UID List
	set theMacroUIDs to selectedMacros

	---- get the name list of selectedMacros
	repeat with i from 1 to number of items in theMacroUIDs
		set this_item to item i of theMacroUIDs
		copy name of (macro id this_item) to end of theMacroNames
	end repeat
end tell
